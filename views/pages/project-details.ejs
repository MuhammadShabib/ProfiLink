<%- include('../partials/header') %>
    <link rel="stylesheet" href="/css/project-details.css">
    <%- include('../partials/navbar') %>

        <div class="project-details-container fade-in">
            <div class="project-card">
                <h2 class="project-title">
                    <%= project.title %>
                </h2>

                <% if (project.image) { %>
                    <img src="/uploads/<%= project.image %>" class="project-image" alt="<%= project.title %>">
                    <% } %>
                        <div class="project-section">
                            <h3 class="section-title">توضیحات:</h3>
                            <p>
                                <%= project.description %>
                            </p>
                        </div>
                        <div class="project-section">
                            <% if (project.link) { %>
                                <p><a href="<%= project.link %>" target="_blank">لینک پروژه خارجی</a></p>
                                <% } %>
                        </div>
                        <div class="project-meta">
                            <div class="meta-info">
                                <div class="meta-icon">ع</div>
                                <div>
                                    <p><strong>توسط:</strong>
                                        <%= project.full_name %> - <%= project.profession %>
                                    </p>
                                </div>
                                <div class="project-likes">
                                    <% if (userId) { %>
                                        <button class="like-btn" data-id="<%= project.id %>">
                                            <%= project.liked_by_user ? '💖 پسند شده' : '🤍 پسندیدن' %>
                                                (<span class="like-count">
                                                    <%= project.likes %>
                                                </span>)
                                        </button>
                                        <% } else { %>
                                            <p>تعداد پسندها: <%= project.likes %>
                                            </p>
                                            <% } %>
                                </div>
                            </div>
                        </div>
            </div>
        </div>


        <%- include('../partials/footer') %>