<link rel="stylesheet" href="./css/add-project.css">
<%- include('../partials/header') %>
<%- include('../partials/navbar') %>

<div class="container">
  <h2 class="page-title">افزودن پروژه جدید</h2>

  <form action="/add-project" method="POST" enctype="multipart/form-data" class="form-box">
    <div class="form-group">
      <label for="title">عنوان پروژه</label>
      <input type="text" id="title" name="title" required>
    </div>

    <div class="form-group">
      <label for="description">توضیحات</label>
      <textarea id="description" name="description" rows="4" required></textarea>
    </div>

    <div class="form-group">
      <label for="link">لینک پروژه (اختیاری)</label>
      <input type="url" id="link" name="link" placeholder="https://example.com">
    </div>

    <div class="form-group">
      <label for="image">تصویر پروژه (اختیاری)</label>
      <input type="file" id="image" name="image" accept="image/*">
    </div>

    <button type="submit" class="btn submit">📤 ارسال پروژه</button>
  </form>
</div>

<%- include('../partials/footer') %>
