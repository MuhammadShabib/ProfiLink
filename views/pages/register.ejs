<%- include('../partials/header') %>
  <link rel="stylesheet" href="/css/register.css">
  <%- include('../partials/navbar') %>

    <div class="container">
      <div class="register-box">
        <h2>فرم ثبت‌نام</h2>
        <form action="/register" method="POST">
          <label for="full_name">نام کامل</label>
          <input type="text" id="full_name" name="full_name" required>

          <label for="email">ایمیل</label>
          <input type="email" id="email" name="email" required>

          <label for="password">رمز عبور</label>
          <input type="password" id="password" name="password" required>

       <label for="profession">حرفه / تخصص</label>
      <select id="profession" name="profession" required>
        <option value="">انتخاب کنید...</option>
        <option value="برنامه‌نویس">برنامه‌نویس</option>
        <option value="طراح گرافیک">طراح گرافیک</option>
        <option value="توسعه‌دهنده وب">توسعه‌دهنده وب</option>
        <option value="تحلیل‌گر داده">تحلیل‌گر داده</option>
        <option value="نویسنده محتوا">نویسنده محتوا</option>
        <option value="مدیر پروژه">مدیر پروژه</option>
        <option value="دیگر">دیگر</option>
      </select>


          <button type="submit" class="btn">ثبت‌نام</button>
        </form>

        <p class="redirect-msg">قبلاً حساب دارید؟ <a href="/login">وارد شوید</a></p>
      </div>
    </div>

    <%- include('../partials/footer') %>